<h1>Say Double Cheese!</h1>
<img src="../images/trio.jpg" id="burger">

            <h2>Ready to eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>{{burger_name}}</li>
                <button data-burger="{{id}}" class="btn btn-default btn-lg devour-btn">Devour it!</button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col lg 6"></div>
        <h2>Devoured!</h2>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>{{burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
</div>

<div class="container"></div>
<h2>Add a burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>
    <button class="create-form">Add burger</button>
</form>
</div>